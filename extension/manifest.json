{
  "manifest_version": 3,
  "name": "AutoMeet Sticky Popup",
  "version": "1.2",
  "description": "Meeting Assistant â€” sticky popup panel that stays until closed.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AutoMeet"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.css", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
