{
  "manifest_version": 3,
  "name": "AutoMeet Sticky Popup",
  "version": "1.3",
  "description": "Meeting Assistant â€” sticky popup panel that stays until closed.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AutoMeet"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html", 
        "popup.css", 
        "popup.js",
        "transcript.html",
        "transcript.css",
        "transcript.js",
        "chat.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ]
}