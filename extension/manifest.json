{
  "manifest_version": 3,
  "name": "AutoMeet",
  "version": "1.0",
  "description": "Docked Meeting Assistant on any page",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "AutoMeet"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
