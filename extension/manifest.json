{
  "manifest_version": 3,
  "name": "AutoMeet",
  "version": "1.0",
  "description": "Capture live captions from Google Meet and Zoom meetings and display transcript.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.zoom.us/*",
    "https://*.zoom.com/*",
    "https://*.zoomgov.com/*",
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zoom.us/*",
        "https://*.zoom.com/*",
        "https://*.zoomgov.com/*",
        "https://meet.google.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [{
    "resources": ["popup.html", "transcript.html", "chat.html"],
    "matches": [
      "https://*.zoom.us/*", 
      "https://*.zoom.com/*", 
      "https://*.zoomgov.com/*",
      "https://meet.google.com/*"
    ]
  }]
}